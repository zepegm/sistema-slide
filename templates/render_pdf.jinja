<html>
    <head>
        <title>Render PDF</title>
        <style>

            @font-face {
                font-family:bebaskai;
                font-style:normal;
                font-weight:400;
                src:local('BebasKai'),
                url({{ url_for('static', filename='fonts/BebasKai-Regular.woff') }}) format('woff')
            }

            body > :last-child: { margin-bottom: -1px; overflow: hidden; }

            #container {
                position: absolute;
                top:0px;
            }

            .pagina {
                position: relative;
                top: 0px;
                left: 5px;
                width: 401px;
                height: 580px;
                border: solid;
                border-width: 1px;
                border-color: rgb(255, 0, 0, 0);
                margin-bottom: 40px;
            }

            .capa {
                position: relative;
                top: 0px;
                left: 5px;
                width: 393px;
                height: 571px;                
                border: 5px solid black;
                margin-bottom: 40px;
            }

            .capa:before {
                content: " ";
                position: absolute;
                z-index: -1;
                top: 5px;
                left: 5px;
                right: 5px;
                bottom: 5px;
                border: 1px solid black;
            }            

            .titulo {
                text-align: center;
                font-family:'BebasKai', sans-serif;
                color:rgb(0, 112, 192);
                font-size: 20.5px;
                position: relative;
                top:-17.5px;
            }

            .titulo-capa {
                position: relative;
                top:5px;
                text-align: center;
                font-family:'BebasKai', sans-serif;
                font-size: 35px;
            }

            .texto-capa {
                margin-top: 40px;
                text-align: center;
                font-family:'BebasKai', sans-serif;
                font-size: 50px;
                color: red;
            }

            .foot-capa {
                margin-top: 70px;
                text-align: center;
                font-family: Helvetica, Arial, sans-serif;
                font-size: 25px;
            }

            .titulo-info {
                position: relative;
                top:16px;
                text-align: center;
                font-family:'BebasKai', sans-serif;
                font-size: 22px;
                text-decoration: underline;                
            }

            #logo {
                margin-top: 40px;
                position: relative;
                width: 180px;
                height: auto;
                left: 27%;
            }

            .content {
                font-size: 10.5px;
                font-family: Helvetica, Arial, sans-serif;
                position: relative;
                top: -25px;
                left: 23px;
                line-height: 1.3;
            }

            .pagina2 {
                position: relative;
                top: 0px;
            }            

            .content-info {
                position: relative;
                left:17px;
                margin-top: 40px;
                font-size: 12px;
                font-family: Helvetica, Arial, sans-serif;
                line-height: 1.8;                
            }

            .content-sumario {
                position: relative;
                left:17px;
                margin-top: 35px;
                font-size: 8px;
                font-family: Helvetica, Arial, sans-serif;
            }

            .sumario-extra {
                margin-top: 13px;
            }

            .content-sumario p {
                margin-bottom: -1px;
                border-bottom: 1px dashed #000;
                border-color:rgb(0,0,0,0.5);
                margin-right: 35px;
            }

            .lista {
                font-size:10px;
                line-height: 1.4;
            }

            .super-lista {
                position: relative;
                left:-40px;
            }

            .super-lista:first-of-type {
                margin-top: -10px;
            }

            .cdx-marker {
                color:rgba(192,0,0);
                font-weight:bold;
                background:rgba(0,0,0,0);
                padding-right: 3px;
            }    

            .cdx-underline {
                /*text-decoration: underline;
                -webkit-text-underline-position: under;
                -ms-text-underline-position: below;
                text-underline-position: under; */
                text-decoration: none;
                border-bottom: solid;
                border-width: thin;
                padding-bottom: 1px;
            }   

            .pag {
                float: right;
                background: white;
                padding: 0 0 5px 3px;
            }     

            .titulo-sumario {
                background: white;
                padding: 0 3px 5px 0;
            }

            .paginacao {
                position: relative;
                text-align: center;
                top:565px;
                font-size: 10px;
                font-family: Helvetica, Arial, sans-serif;                
            }

            a {
                text-decoration: none;
                color: black;
            }

        </style>
    </head>
    <body>
        <div id="container">
            {% if completo == 'true' %}
            <div id="capa" class="capa">
                <div class="titulo-capa">Assembleia de Deus Ministério De Cachoeira Paulista</div>
                <img id="logo" src="{{ url_for('static', filename='images/Logo Colorido.png') }}">
                <div class="texto-capa">Hinário dos Slides</div>
                <div class="foot-capa"><b>Edição: </b>{{data}}</div>
            </div>
            <div id="info" class="pagina">
                <div class="titulo-info">Informações do Documento</div>
                <div class="content-info">
                    <p>Documento gerado automaticamente pelo banco de dados do sistema <b>"Slide Master Index II".</b></p>
                    <p>
                        <b>Data do Documento: </b>{{data}}
                        <br>
                        <b>Quantidades de Músicas: </b>{{lista|length}}
                    </p>
                    <p>
                        <b>Vínculos: </b><br>
                        
                        {% for item in lista_categoria %}
                            <ul class="super-lista">
                            {{item['descricao']}}
                                <ul class="lista">
                                {% for cat in item['cats'] %}
                                    <li>{{cat}}</li>
                                {% endfor %}
                                </ul>
                            </ul>
                        {% endfor %}
                    </p>
                </div>
            </div>
            <div id="sumario" class="pagina">
                <div class="titulo-info">Sumário</div>
                <div class="content-sumario">
                    {% set vars = namespace(limite=30) %}
                    {% for item in lista %}
                    <p><a href="#pag{{item['cont']}}"><span class="titulo-sumario">{{item['cont']}}. {{item['titulo']}}</span><span class="pag">{{item['pag']}}</span></a></p>
                        {% if vars.limite == item['cont']|int %}
                </div>
            </div>
            <div class="pagina">
                <div class="content-sumario sumario-extra">
                        {% set vars.limite = vars.limite + 33 %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            {% for item in lista %}
            <div id="pag{{item['cont']}}" class="pagina">
                <div class="paginacao">{{item['pag']}}</div>
                {% if completo == 'true' %}
                <h3 class="titulo">{{item['cont']}}. {{item['titulo']}}</h3>
                {% else %}
                <h3 class="titulo">{{item['titulo']}}</h3>
                {% endif %}
                <div class="content">
                    {% for par in item['letras'] %}
                    <p>{{par['texto']|safe}}</p>
                    {% endfor %}
                </div>
            </div>

            {% if item['letras_2']|length > 0 %}
            <div id="pag{{item['cont'] + 1|string}}" class="pagina">
                <div class="paginacao">{{item['pag']|int + 1}}</div>
                <div class="content pagina2">
                    {% for par in item['letras_2'] %}
                    <p>{{par['texto']|safe}}</p>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {% endfor %}        
        </div>
    </body>
</html>