        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">
        <section class="container">
          <div class="row">
            <div class="col-sm-12">
              <h1 class="fw-light">Apresentador de Slides</h1>
              <p class="lead text-muted">Abaixo você a lista dos versículos, basta clicar em um dos botoes ou utilizar as setas do teclado ou PgDown e PgUp para avançar ou voltar.</p>
            </div>
          </div>

          <div class="row" id="painel_head">

            <div class="col-sm-12">
                {% if index == 1 %}
                <button id="btn_previous" class="btn btn-light arrow" disabled><i class="fa-solid fa-circle-arrow-left"></i></button>
                {% else %}
                <button id="btn_previous" class="btn btn-light arrow"><i class="fa-solid fa-circle-arrow-left"></i></button>
                {% endif %}
                {% if index == lista|length %}
                <button id="btn_next" class="btn btn-light arrow" disabled><i class="fa-solid fa-circle-arrow-right"></i></button>
                {% else %}
                <button id="btn_next" class="btn btn-light arrow"><i class="fa-solid fa-circle-arrow-right"></i></button>
                {% endif %}
            </div>

            <div class="col-sm-12">
              <hr>
            </div>

            <div class="col-sm-12 text-dark">
              <h4>{{head['descricao_livro']}} de <b>{{head['livro']}}</b>, {{head['descricao_cap']}} <b>{{head['cap']}}</b>, {{head['descricao_vers']}} <b>{{index}}</b> - {{head['versao']}}</h4>
            </div>   

          </div>

          <div class="row" id="painel_versiculos">
            <table class="table">
              <tbody>
              {% for item in lista %}
              {% if index == item['ver'] %}
              <tr class="table-warning">
                <th class="align-middle t_vers">{{item['ver']}}</th>
                <td class="align-middle">{{item['texto']}}</td>
              </tr>
              {% else %}
              <tr>
                <th class="align-middle t_vers">{{item['ver']}}</th>
                <td class="align-middle">{{item['texto']}}</td>
              </tr>
              {% endif %}
              {% endfor %}
              </tbody>
            </table>
          </div>

        </section>
      </div>
