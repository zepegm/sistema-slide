<html lang="pt">
    <head>
        <title>Slide PIX</title>

        <link href="{{ url_for('static', filename='bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

        <style>
            .capa {
                background-image: url("{{ url_for('static', filename='images/PIX.png') }}");  
                background-size: contain;
                background-repeat: no-repeat;
                background-size: 100% 100%;
                position: fixed;
                min-width: 100%;               
                min-height: 100%;
                top:0%;    
                left:0%;                
            }    

            #slide_principal {
                position: fixed;
                top: 1%;
                right: 1%;
                width: 75%;
                height: 80%;

                border: solid 9px yellow;
            }  

            #loading {
                background-color:white;
                width: 100%;
                height: 100%;
                position: absolute;
                top:0%;
                left:0%;
            }  

            .vertical-center {
              margin: 0;
              position: relative;
              top: 50%;
              text-align: center;
              -ms-transform: translateY(-50%);
              transform: translateY(-50%);
            }

        </style>
    </head>
    <body>
        <div class="capa"></div>
        <iframe id="slide_principal" src="/slide" title="description"></iframe>
        <div id="loading">
            <div class="d-flex justify-content-center vertical-center">
              <div class="spinner-border" role="status" style="width: 30rem; height: 30rem; border-width: 5rem;">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
        </div>

    <script src="{{ url_for('static', filename='js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/socket.io.min.js') }}"></script>

    <script>
        var socket = io();
        socket.on('pix', function(result) {
            window.location.replace("/slide");
        });

        window.addEventListener("load", (event) => {
          const element = document.getElementById("loading");
          element.remove();
        });

    </script>
    </body>
</html>