      <div id="content" class="p-4 p-md-5 pt-5">
        <section class="container">
          <div class="row">
            <div id="status" class="col-sm-12">{{status}}</div>
            <div id="loading" class="col-sm-12 text-center" hidden>
              <div class="spinner-border text-danger" role="status">
                <span class="sr-only">Carregando...</span>
              </div><span class="center">&nbsp;Renderizando PDF... Por favor aguarde.</span>
            </div>
            <div class="col-sm-12">
              <h2 class="fw-bold">Abrir Hino da Harpa</h2>
            </div>
          </div>
          <div class="row d-flex align-items-center">
            <div class="col-sm-8">
              <button id="btn_nova_musica" class="btn btn-primary" data-toggle="modal" data-target="#modalConfirm"><i class="fa-solid fa-plus"></i> Novo Hino</button>
              <button id="btn_editar_musica" class="btn btn-secondary" data-toggle="modal" data-target="#modalConfirm" disabled><i class="fa-solid fa-pen-to-square"></i> Editar Selecionado</button>
              <button id="btn_gerar_pdf" class="btn btn-danger"><i class="fa-solid fa-file-pdf"></i> Gerar PDF da Harpa</button>
            </div>
            
            <div class="col-sm-3">
              <form method="post" action="pesquisarLetra">
              <input type="text" name="pesquisa" class="form-control" id="txt_pesquisa_letra" placeholder="Pesquisa Profunda (letras e títulos)">
            </div>
            <div class="col-sm-1">
              <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
              </form>
            </div>

            <div class="col-sm-12">
              <hr>
            </div>

          </div>
          <div class="row">
            <div class="col-sm-3">
