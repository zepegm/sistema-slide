  <script>
  
  $("#upload_image").on('change', function() {
    var form_data = new FormData();

    form_data.append('file', $(this).prop('files')[0]);
    form_data.append('id', {{id}});

    $.ajax({
        type: 'POST',
        url: '/upload_capa',
        data: form_data,
        contentType: false,
        cache: false,
        processData: false,
        success: function(data) {
            $("#uploaded_image").attr('src', data);
        },
    });
  });

  </script>

