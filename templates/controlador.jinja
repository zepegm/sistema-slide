  <script>

    window.onload = function() {
      textFit($('#slideProx'), {alignVert: true, multiLine: true, minFontSize: 20, maxFontSize: 43});
    };

    function goto(index) {
      $.ajax({
        type: "POST",
        url: "{{ url_for('goto') }}",
        contentType: "application/json",
        data: JSON.stringify(index),
        dataType: "json",
        success: function(response) {
          $("#slideAtual").text("Slide Atual: " + response)
          $("#imgAtual").attr('src', '/static/images/slides/' + response + '.png');
          if (response == total_slides) {
            $("#proximoSlide").text('Próximo Slide: -')
            $("#imgProx").attr('src', "{{ url_for('static', filename='images/Fim.jpg') }}");
          } else {
            $("#proximoSlide").text('Próximo Slide: ' + (response + 1))
            $("#imgProx").attr('src', '/static/images/slides/' + (response + 1) + '.png');
          }

        },
        error: function(err) {
          console.log(err);
        }
      });
    }

    function previous() {
      $.ajax({
        type: "POST",
        url: "{{ url_for('anteriorSlide') }}",
        contentType: "application/json",
        data: JSON.stringify(1),
        dataType: "json",
        success: function(response) {
          $("#slideAtual").text("Slide Atual: " + response)
          $("#imgAtual").attr('src', '/static/images/slides/' + response + '.png');
          $("#proximoSlide").text('Próximo Slide: ' + (response + 1))
          $("#imgProx").attr('src', '/static/images/slides/' + (response + 1) + '.png');
        },
        error: function(err) {
          console.log(err);
        }
      });       
    }

    function next() {
      $.ajax({
        type: "POST",
        url: "{{ url_for('proximoSlide') }}",
        contentType: "application/json",
        data: JSON.stringify(1),
        dataType: "json",
        success: function(response) {
          $("#slideAtual").text("Slide Atual: " + response)
          $("#imgAtual").attr('src', '/static/images/slides/' + response + '.png');
          if (response == total_slides) {
            $("#proximoSlide").text('Próximo Slide: -')
            $("#imgProx").attr('src', "{{ url_for('static', filename='images/Fim.jpg') }}");
          } else {
            $("#proximoSlide").text('Próximo Slide: ' + (response + 1))
            $("#imgProx").attr('src', '/static/images/slides/' + (response + 1) + '.png');
          }
        },
        error: function(err) {
          console.log(err);
        }
      });      
    }

    $("#proximo").on('click', function() {
      next();
    });

    $("#anterior").on('click', function() {
      previous();
    });    

    $("#changeBackground").on('change', function() {
      $.ajax({
        type: "POST",
        url: "{{ url_for('changeBackground') }}",
        contentType: "application/json",
        data: JSON.stringify($(this).val()),
        dataType: "json",
        success: function(response) {
          console.log(response);
        },
        error: function(err) {
          console.log(err);
        }
      });      
    });

    document.onkeydown = checkKey;

    function checkKey(e) {

        e = e || window.event;

        if (e.keyCode == '38') {
            //previous();
        }
        else if (e.keyCode == '40') {

        }
        else if (e.keyCode == '37'  || e.keyCode == '33') {
            e.preventDefault();
            previous();
        }
        else if (e.keyCode == '39' || e.keyCode == '34') {
            e.preventDefault();
            next();
        }           
    }     

  </script>
      
