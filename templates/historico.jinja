    document.onkeydown = checkKey;

      function checkKey(e) {

          e = e || window.event;

          switch (e.keyCode) {
            case 40:
              e.preventDefault();
              move_down();
              break;
            case 38:
              e.preventDefault();
              move_up();
              break;
          }
      }    

      function move_down() {
        const current = document.querySelector('#ls-principal a.active');

        if (current) {
          let next = current.nextElementSibling;

          // Procurar o próximo irmão que seja uma <a> e que NÃO tenha a classe 'toggled'
          while (next && (next.tagName.toLowerCase() !== 'a' || next.classList.contains('toggled'))) {
            next = next.nextElementSibling;
          }

          if (next) {
            current.classList.remove('active');
            next.classList.add('active');

            const dataId = next.dataset.id;
            carregarDetalhes(dataId);
          }
        }
      }

      function move_up() {
        const current = document.querySelector('#ls-principal a.active');

        if (current) {
          let prev = current.previousElementSibling;

          // Procurar o anterior que seja um <a> e que NÃO tenha a classe 'toggled'
          while (prev && (prev.tagName.toLowerCase() !== 'a' || prev.classList.contains('toggled'))) {
            prev = prev.previousElementSibling;
          }

          if (prev) {
            current.classList.remove('active');
            prev.classList.add('active');

            // Pegar o valor de data-id
            const dataId = prev.dataset.id;
            carregarDetalhes(dataId);
          }
        }        
      }

