    <script>

      window.onload = function() {
        $("#loading").remove();    
      };

    document.onkeydown = checkKey;

      function checkKey(e) {

          e = e || window.event;

          switch (e.keyCode) {
            case 40:
              e.preventDefault();
              move_down();
              break;
            case 38:
              e.preventDefault();
              move_up();
              break;
          }
      }    

      function move_down() {
        const current = document.querySelector('#ls-principal a.active');

        if (current) {
          let next = current.nextElementSibling;

          // Procurar o próximo irmão que seja uma <a> e que NÃO tenha a classe 'toggled'
          while (next && (next.tagName.toLowerCase() !== 'a' || next.classList.contains('toggled'))) {
            next = next.nextElementSibling;
          }

          if (next) {
            current.classList.remove('active');
            next.classList.add('active');

            const dataId = next.dataset.id;
            carregarDetalhes(dataId);
          }
        }
      }

      function move_up() {
        const current = document.querySelector('#ls-principal a.active');

        if (current) {
          let prev = current.previousElementSibling;

          // Procurar o anterior que seja um <a> e que NÃO tenha a classe 'toggled'
          while (prev && (prev.tagName.toLowerCase() !== 'a' || prev.classList.contains('toggled'))) {
            prev = prev.previousElementSibling;
          }

          if (prev) {
            current.classList.remove('active');
            prev.classList.add('active');

            // Pegar o valor de data-id
            const dataId = prev.dataset.id;
            carregarDetalhes(dataId);
          }
        }        
      }


      $("#txt_filtro_musica").on('keyup', function() {
        val = $(this).val().normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase();

        $(".item-musica").each(function(index) {
          //console.log($(this).text().toLowerCase().normalize("NFD") + " - " + val);
          if ($(this).text().normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase().indexOf(val) !== - 1) {
            $(this).removeClass('toggled');
          } else {
            $(this).addClass('toggled');
          }
        });

      });     

      $("#cb_ano").on('change', function() {

        const ano = $(this).val();

        $("#ls-principal").empty();
        $("#painel_detalhes").empty();        

        $.ajax({
          type: "POST",
          url: "{{ url_for('historico') }}",
          contentType: "application/json",
          data: JSON.stringify({destino:2, ano:ano}),
          dataType: "json",
          success: function(response) {
            console.log(response);

            for (let i = 0; i < response.length; i++) {
              $("#ls-principal").append(`<a href="#" class="list-group-item list-group-item-action ${response[i]['tema_id']}" data-id="${response[i]['id']}" data-mes="${response[i]['mes']}" data-ano="${response[i]['ano']}">${response[i]['data']} <b>(${response[i]['semana']})</b> - ${response[i]['tema']}</a>`);
            }


            filtrarMes($("#cb_mes").val());
          },
          error: function(err) {
            console.log(err);
          }
        });          

      });

      function filtrarMes(mes) {

        if (mes == '00') {
          $("#ls-principal a").removeClass('toggled');
        } else {
          $("#ls-principal a").toggleClass('toggled', true);

          $("#ls-principal a").filter(function () {
            
            if ($(this).attr('data-mes') == mes) {
              $(this).removeClass('toggled');
            }
        
          });
        }
      }

      $("#cb_mes").on('change', function() {
        filtrarMes($(this).val());
      });

      function carregarDetalhes(id) {
        $.ajax({
          type: "POST",
          url: "{{ url_for('historico') }}",
          contentType: "application/json",
          data: JSON.stringify({destino:1, id:id}),
          dataType: "json",
          success: function(response) {
            const detalhes = response['detalhes'];
            const itens = response['itens'];

            console.log(itens);

            $("#painel_detalhes").empty();

            $("#painel_detalhes").append("<h3>Detalhes: " + `<a href="${detalhes['URL']}"><i class="fa-brands fa-youtube fa-1x"></i></a></h3>`);
            $("#painel_detalhes").append(`<p class="text"><b>Tipo: </b>${detalhes['tipo']}</p>`);
            $("#painel_detalhes").append(`<p class="text"><b>Data: </b>${detalhes['desc_dia']} (${detalhes['semana']})</p>`);
            $("#painel_detalhes").append(`<p class="text"><b>OBS: </b>${detalhes['OBS']}</p>`);
            $("#painel_detalhes").append(`<table id="tb-detalhes" class="table table-bordered"><tbody id="tbody-detalhes"></tbody></table>`);

            let tbody = "";

            for (let i = 0; i < itens.length; i++) {
              tbody += `<tr class="${itens[i]['cor']}">`;
              tbody += `<td>${itens[i]['tipo']}</td>`;
              tbody += `<td>${itens[i]['desc_item']}</td>`;
              tbody += `<td>${itens[i]['departamento']}</td>`;
              tbody += `<td>${itens[i]['formato']}</td>`;
              tbody += "</tr>";
            }

            $("#tbody-detalhes").append(tbody);
          },
          error: function(err) {
            console.log(err);
          }
        });  
      }

      $("#ls-principal").on('click', '.list-group-item', function() {

        let id = $(this).attr('data-id');

        carregarDetalhes(id);

        $(".list-group-item").removeClass('active');
        $(this).addClass('active');
      });

    </script>
      
